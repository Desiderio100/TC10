#include <iostream>
#include <string>
#include <cctype>
#include <cmath>

// funcion recursiva que reciva una cadena de texto y regrese cuantas vocales (a, e, i, o , u) contenga
//sin for o while 
int contarVocales(const std::string& str, int index = 0) {
    if (index >= str.size()) return 0;
    char ch = std::tolower(str[index]);
    int count = (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') ? 1 : 0;
    return count + contarVocales(str, index + 1);       

}



int main() {
    std::cout << "=== Pruebas rÃ¡pidas ===\n";
    std::cout << "contarVocales = " << contarVocales("Desiderio") << "\n";
}